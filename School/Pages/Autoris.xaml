<Page x:Class="School.Pages.Autoris"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:School.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Autoris">

    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock>Администратору необходимо ввести пароль</TextBlock>
            <PasswordBox  x:Name="PasswordTb" Margin="5" Height="20"></PasswordBox>
            <Button x:Name="EnterBtn" Click="EnterBtn_Click">Войти</Button>
        </StackPanel>
    </Grid>
</Page>
