<Page x:Class="School.Pages.SigningUpService"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:School.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SigningUpService">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
            <TextBlock Text="{Binding Titile}"></TextBlock>
            <TextBlock Text="{Binding CostTimeStr}"></TextBlock>
            <StackPanel Orientation="Horizontal">
                <TextBlock>Клиент</TextBlock>
                <ComboBox Width="250" x:Name="ClientCb"></ComboBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock>Дата</TextBlock>
                <DatePicker x:Name="DateDb" Width="150" Height="30" Margin="3"></DatePicker>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock>Время</TextBlock>
                <TextBox x:Name="TimeTb" ></TextBox>
            </StackPanel>
            <Button x:Name="SignUpBtn" Click="SignUpBtn_Click">Записать на услугу</Button>
        </StackPanel>
        
    </Grid>
</Page>
